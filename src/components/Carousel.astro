<div
	id="default-carousel"
	class="relative z-10 w-full pt-14"
	data-carousel="slide"
	data-carousel-interval="10000"
>
	<!-- Carousel wrapper -->
	<div
		class="relative h-52 overflow-hidden sm:h-64 md:h-96 lg:h-[520px] xl:h-[640px] 2xl:h-[720px]"
	>
		<!-- Item 1 -->
		<div class="hidden duration-700 ease-in-out" data-carousel-item>
			<img
				src="/index/slider/1.jpg"
				class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2 object-contain"
				alt="Slide 1"
			/>
		</div>
		<!-- Item 2 -->
		<div class="hidden duration-700 ease-in-out" data-carousel-item>
			<img
				src="/index/slider/2.jpg"
				class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2 object-contain"
				alt="Slide 2"
			/>
		</div>
		<!-- Item 3 -->
		<div class="hidden duration-700 ease-in-out" data-carousel-item>
			<img
				src="/index/slider/3.jpg"
				class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2 object-contain"
				alt="Slide 3"
			/>
		</div>
	</div>
	<!-- Slider indicators -->
	<div
		class="invisible absolute bottom-5 left-1/2 z-30 flex -translate-x-1/2 space-x-3 rtl:space-x-reverse"
	>
		<button
			type="button"
			class="h-3 w-3 rounded-full"
			aria-current="true"
			aria-label="Slide 1"
			data-carousel-slide-to="0"></button>
		<button
			type="button"
			class="h-3 w-3 rounded-full"
			aria-current="false"
			aria-label="Slide 2"
			data-carousel-slide-to="1"></button>
		<button
			type="button"
			class="h-3 w-3 rounded-full"
			aria-current="false"
			aria-label="Slide 3"
			data-carousel-slide-to="2"></button>
	</div>
	<!-- Slider controls -->
	<button
		type="button"
		class="group invisible absolute start-0 top-0 z-30 flex h-full cursor-pointer items-center justify-center px-4 focus:outline-none md:visible"
		data-carousel-prev
	>
		<span
			class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-white/30 group-hover:bg-white/50 group-focus:outline-none group-focus:ring-4 group-focus:ring-white"
		>
			<svg
				class="h-4 w-4 text-white rtl:rotate-180"
				aria-hidden="true"
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 6 10"
			>
				<path
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M5 1 1 5l4 4"></path>
			</svg>
			<span class="sr-only">Previous</span>
		</span>
	</button>
	<button
		type="button"
		class="group invisible absolute end-0 top-0 z-30 flex h-full cursor-pointer items-center justify-center px-4 focus:outline-none md:visible"
		data-carousel-next
	>
		<span
			class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-white/30 group-hover:bg-white/50 group-focus:outline-none group-focus:ring-4 group-focus:ring-white"
		>
			<svg
				class="h-4 w-4 text-white rtl:rotate-180"
				aria-hidden="true"
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 6 10"
			>
				<path
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="m1 9 4-4-4-4"></path>
			</svg>
			<span class="sr-only">Next</span>
		</span>
	</button>
</div>
