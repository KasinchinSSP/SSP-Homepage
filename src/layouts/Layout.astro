---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>SSP Smart Solutions Partner</title>
	</head>
	<body class="h-vh m-0 w-full font-sans">
		<Navbar />
		<slot />
		<Footer />

		<script is:inline>
			document.addEventListener('DOMContentLoaded', () => {
				const urlParams = new URLSearchParams(window.location.search)
				const newReferralId = urlParams.get('ref')

				const oldReferralId = localStorage.getItem('referral')

				if (newReferralId) {
					if (newReferralId !== oldReferralId) {
						localStorage.setItem('referral', newReferralId)
						console.log(`Referral ID updated: ${newReferralId}`)
					} else {
						console.log('Referral ID is the same, no update needed.')
					}
				} else {
					console.log('No Referral ID provided in the URL.')
				}

				const activeReferralId = localStorage.getItem('referral') || 'No Referral ID'
				console.log(`Active Referral ID: ${activeReferralId}`)
			})
		</script>

		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
		></script>
	</body>
</html>
